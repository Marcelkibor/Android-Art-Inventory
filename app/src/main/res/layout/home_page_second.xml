<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/home_shape"
    android:layout_height="match_parent"
    android:id="@+id/lyDrawer"
    tools:context=".HomePageActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvGt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="172dp"
        android:fontFamily="casual"
        android:layout_marginBottom="43dp"
        android:text="ART-ALK"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/navDrawer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/tvGt"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-130dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/menu" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btHomeCreate"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        android:backgroundTint="#490755"
        android:text="CREATE"
        android:textSize="30dp"
        app:cornerRadius="80dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btHomeCreate"
        android:layout_alignBottom="@+id/btHomeCreate"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="-5dp"
        android:src="@drawable/pick" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btGal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/btHomeCreate"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFC107"
        android:text="GALLERY"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:cornerRadius="80dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btHomeCreate"
        android:layout_alignBottom="@+id/btHomeCreate"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="-126dp"
        android:src="@drawable/home" />

</RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>